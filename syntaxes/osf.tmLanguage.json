{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "OSF",
	"scopeName": "source.osf",
	"patterns": [
		{
			"include": "#node_properties"
		},
		{
			"include": "#text_block"
		},
		{
			"include": "#node_declaration"
		},
		{
			"include": "#header"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.number-sign.osf",
					"match": "#.*$"
				}
			]
		},
		"header": {
			"patterns": [
				{
					"name": "meta.header.osf",
					"match": "^\\s*([a-zA-Z_][a-zA-Z0-9_]*):\\s*(.+)\\s*$",
					"captures": {
						"1": {
							"name": "entity.name.tag.osf"
						},
						"2": {
							"name": "string.unquoted.value.osf"
						}
					}
				}
			]
		},
		"node_declaration": {
			"patterns": [
				{
					"name": "meta.node.declaration.osf",
					"match": "^(node)\\s+([a-zA-Z_][a-zA-Z0-9_]*):\\s*$",
					"captures": {
						"1": {
							"name": "keyword.control.osf"
						},
						"2": {
							"name": "entity.name.function.osf"
						}
					}
				}
			]
		},
		"node_properties": {
			"patterns": [
				{
					"name": "meta.property.osf",
					"match": "^(\\s+)([a-zA-Z_][a-zA-Z0-9_]*):[ \\t]*(.*?)?[ \\t]*$",
					"captures": {
						"1": {
							"name": "punctuation.whitespace.leading.osf"
						},
						"2": {
							"name": "entity.name.tag.osf"
						},
						"3": {
							"name": "meta.property.value.osf",
							"patterns": [
								{
									"name": "meta.variable-access.osf",
									"match": "([a-zA-Z_][a-zA-Z0-9_]*)\\.([a-zA-Z_][a-zA-Z0-9_]*)",
									"captures": {
										"1": {
											"name": "entity.name.type.class.osf"
										},
										"2": {
											"name": "variable.other.constant.property.osf"
										}
									}
								},
								{
									"include": "#strings"
								},
								{
									"name": "string.unquoted.value.osf",
									"match": ".+"
								}
							]
						}
					}
				}
			]
		},
		"property_variable_access": {
			"patterns": [
				{
					"name": "meta.header.osf",
					"match": "([a-zA-Z_][a-zA-Z0-9_]*)\\.([a-zA-Z_][a-zA-Z0-9_]*)",
					"captures": {
						"1": {
							"name": "variable.other.object.osf"
						},
						"2": {
							"name": "variable.other.property.osf"
						}
					}
				}
			]
		},
		"text_block": {
			"name": "string.unquoted.block.osf",
			"begin": "^(?=(\\s{4,}))",
			"end": "^(?!\\s{4,})",
			"patterns": [
				{
					"include": "#interpolated_variable"
				}
			]
		},
		"interpolated_variable": {
			"name": "meta.variable.interpolation.osf",
			"match": "(\\$)([a-zA-Z_][a-zA-Z0-9_]*)((?:\\.)([a-zA-Z_][a-zA-Z0-9_]*))*",
			"captures": {
				"1": {
					"name": "entity.name.type.class.osf"
				},
				"2": {
					"name": "entity.name.type.class.osf"
				},
				"3": {
					"name": "variable.other.property.osf"
				},
				"4": {
					"name": "variable.other.property.osf"
				}
			}
		},
		"strings": {
			"name": "string.quoted.double.osf",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.osf",
					"match": "\\\\."
				}
			]
		}
	}
}