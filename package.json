{
  "name": "osf-language",
  "displayName": "OSF Language",
  "description": "Syntax high lightning for OSF (Open Story Foundation Lnaguage",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "scripts": {
    "build": "node ./scripts/build.js",
    "test": "vitest",
    "watch": "npm run build && chokidar './syntaxes/**/*.yaml' -c 'npm run build'"
  },
  "contributes": {
    "languages": [
      {
        "id": "osf",
        "aliases": [
          "Open Story File",
          "OSF",
          "osf"
        ],
        "extensions": [
          ".osf"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "osf",
        "scopeName": "source.osf",
        "path": "./syntaxes/osf.tmLanguage.json"
      }
    ]
  },
  "devDependencies": {
    "@types/node": "^22.14.1",
    "chokidar-cli": "^3.0.0",
    "js-yaml": "^4.1.0",
    "vitest": "^3.1.1",
    "vscode-oniguruma": "^2.0.1",
    "vscode-textmate": "^9.2.0"
  }
}
